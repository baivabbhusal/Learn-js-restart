<script> 
function addLanguage(language)
{
    const li=document.createElement("li");
    const addText=document.createTextNode(language);
    li.appendChild(addText);
    document.querySelector(".language").appendChild(li);

}

addLanguage("Mojo");
addLanguage("Python");

